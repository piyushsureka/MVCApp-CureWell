@model IEnumerable<QuickKartCoreMVCApp.Models.Categories>

    @{
        ViewData["Title"] = "ViewCategories";
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }

    <h2>Categories</h2>


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.ActionLink("Update", "UpdateCategory", item) |

                    @*@Html.ActionLink("Update", "Edit", new { id = item.ProductId }) |*@
                    @*@Html.ActionLink("Delete", "Delete", item)*@
                    @Html.ActionLink("Delete", "DeleteCategory", new { CategoryId = item.CategoryId, CategoryName = item.CategoryName})



                </td>

            </tr>
            }
        </tbody>
    </table>
